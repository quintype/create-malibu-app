#! /bin/sh -e

DEST="$(pwd)/$1"

EXEC_PATH="$0"
CODE_PATH="$(cd ..; pwd)"
git clone git@github.com:quintype/malibu.git
rm -rf "$CODE_PATH/malibu/.circleci/" "$CODE_PATH/malibu/lighthousecierc.js"
cp -r "$CODE_PATH/malibu" "$DEST"

cd "$DEST"

git init

# # npm pack skips .gitignore and package-lock.json, so doing some hacks
# cat > .gitignore <<EOF
# /dist
# /node_modules
# EOF

npm install
git add .
git commit -nam "Initial Commit"

echo "Created $1!"
