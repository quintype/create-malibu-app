#! /bin/sh -e

DEST="$(pwd)/$1"

EXEC_PATH="$0"
CODE_PATH="$(cd ..; pwd)"
echo "Preparing malibu to be $1"
git clone --quiet git@github.com:quintype/malibu.git $DEST
rm -rf "$CODE_PATH/$DEST/.circleci/" "$CODE_PATH/$DEST/lighthousecierc.js"

cd $DEST

git init

npm install
git add .
git commit -nam "Initial Commit"

echo "Created $1!"
